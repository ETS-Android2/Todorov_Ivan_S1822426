<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="149dp"
        android:layout_marginTop="70dp"
        android:src="@drawable/logo_ts_blue"
        android:contentDescription="@string/app_logo"
        />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="142dp"
        android:freezesText="false"
        android:gravity="center"
        android:paddingStart="90dp"
        android:paddingEnd="90dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="60dp"
        android:text="@string/welcoming_msg"
        android:textColor="#220202"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/Roadworks_button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:background="#50F8F5F5"
            android:src="@drawable/menu_icon1a"
            android:contentDescription="@string/option1"
            />

        <ImageButton

            android:id="@+id/Roadworks_button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:background="#50F8F5F5"
            android:src="@drawable/menu_icon2a"
            android:contentDescription="@string/option2"
            />
    </LinearLayout>

</LinearLayout>